<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#669999"
    >
    <RelativeLayout
        android:id="@+id/box_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        >
    <EditText
        android:layout_marginTop="180dp"
        android:id="@+id/edit_ip"
        android:layout_width="200dp"
        android:drawablePadding="20dp"
        android:textSize="25dp"
        android:layout_height="wrap_content"
        android:hint="192.168.4.1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textAlignment="center"
        android:paddingBottom="13dp"
        android:inputType="text"
        android:textCursorDrawable="@color/Cursor"
        android:text="192.168.4.1"
        style="@style/ConnectEdit"
        android:maxLines="1"
        ></EditText>

        <EditText
            android:id="@+id/edit_part"
            android:text="8080"
            style="@style/ConnectEdit"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_ip"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:drawablePadding="20dp"
            android:hint="8080"
            android:inputType="number"
            android:maxLines="1"
            android:paddingBottom="13dp"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textAlignment="center"
            android:textCursorDrawable="@color/Cursor"
            android:textSize="25dp"></EditText>

        <Button
           android:id="@+id/btn_connect"
           android:layout_width="150dp"
           android:layout_height="wrap_content"
           android:text="connect"
           android:textSize="25dp"
           android:layout_marginTop="15dp"
           android:background="@drawable/connect_style"
           android:layout_marginLeft="25dp"
           android:layout_below="@id/edit_part"
           ></Button>
        <ImageView
            android:layout_width="200dp"
            android:layout_marginTop="40dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_stm32"
            android:layout_below="@id/btn_connect"
            android:scaleType="fitCenter"
            >
        </ImageView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_below="@id/box_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_Version"
            android:textAlignment="center"
            >
        </TextView>
    </RelativeLayout>
</RelativeLayout>